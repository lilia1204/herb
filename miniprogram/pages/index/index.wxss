page{
  width: 100%;
  padding-top: 80rpx;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: -0rpx;
  z-index: -100;
  opacity:33%;
}

.title{
  width: 400rpx;
  margin: 0 auto 40rpx auto;
  text-align: center;
  font-weight: 700;
  font-size: 65rpx;
  letter-spacing: 3rpx;  
}



.box{
  width: 430rpx;
  height: 100rpx;
  background-color: white;
  border-radius: 16rpx;
  margin: 0 auto 50rpx auto;
  display: flex;
  align-items: center;
}
.box:active{
  background-color:gainsboro;
}

.box_margin_top{
  margin-top: 300rpx;
}

.img{
  width: 65rpx;
  height: 65rpx;
  margin: auto 40rpx auto 30rpx;
}


.txt{
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}