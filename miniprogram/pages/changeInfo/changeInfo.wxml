<view >
  <button class="avatar-wrapper" bind:tap="uploadImg">
    <image class="avatar" src="{{avatarUrl}}"></image>
  </button> 

  <view class="tip">点击选择图片</view>
  <!-- <view class="tip2">不支持更换太大尺寸的头像</view> -->
  <form catchsubmit="formSubmit">
    <view class="row">
      <view class="text1">昵称：</view>
        <input value="{{nickName}}"  class="weui-input"  bindinput="in_nickName"  placeholder="请输入昵称"/>
    </view>
    <button type="primary" style="margin-top: 40rpx;margin-bottom: 20rpx;" form-type="submit">提交</button>
  </form>
</view>